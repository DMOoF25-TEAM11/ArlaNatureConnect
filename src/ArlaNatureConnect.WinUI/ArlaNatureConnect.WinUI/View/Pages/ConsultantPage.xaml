<Page
    x:Class="ArlaNatureConnect.WinUI.View.Pages.ConsultantPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArlaNatureConnect.WinUI.View.Pages"
    xmlns:domain="using:ArlaNatureConnect.Domain.Entities"
    Background="{StaticResource AppBackgroundBrush}"
    Loaded="ConsultantPage_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Header with Arla Nature Connect and Dropdown -->
        <Border Grid.Row="0" 
                Background="{StaticResource ArlaPrimaryBrush}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left: Arla Nature Connect and Dropdown -->
                <StackPanel Grid.Column="0" 
                            Orientation="Vertical" 
                            Spacing="10">
                    <TextBlock Text="Arla Nature Connect" 
                               Style="{StaticResource ArlaHeaderText}"
                               Foreground="{StaticResource ArlaNeutralLightBrush}"
                               FontSize="24"/>
                    
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10"
                                VerticalAlignment="Center">
                        <TextBlock Text="Konsulent:" 
                                   Style="{StaticResource ArlaBodyText}"
                                   Foreground="{StaticResource ArlaNeutralLightBrush}"
                                   VerticalAlignment="Center"/>
                        <ComboBox x:Name="UserComboBox"
                                  ItemsSource="{Binding AvailablePersons}"
                                  SelectedItem="{Binding SelectedPerson, Mode=TwoWay}"
                                  Style="{StaticResource ArlaComboBox}"
                                  IsEnabled="{Binding IsLoading, Converter={StaticResource InvertBoolConverter}}"
                                  MinWidth="200"
                                  Background="{StaticResource ArlaSurfaceBrush}"
                                  PlaceholderText="VÃ¦lg bruger">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding FirstName}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding LastName}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!-- Right: Navigation Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="12"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="20,0,0,0">
                    <Button x:Name="DashboardsButton"
                            Tag="Dashboards"
                            Click="NavigationButton_Click"
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="160"
                            MinHeight="45"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Background="{StaticResource ArlaAccentBrush}"
                            Foreground="{StaticResource ArlaNeutralDarkBrush}"
                            BorderBrush="{StaticResource ArlaPrimaryDarkBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="20,12"
                            Content="Dashboards"/>
                    <Button x:Name="FarmsButton"
                            Tag="Farms"
                            Click="NavigationButton_Click"
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="220"
                            MinHeight="45"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Background="{StaticResource ArlaAccentBrush}"
                            Foreground="{StaticResource ArlaNeutralDarkBrush}"
                            BorderBrush="{StaticResource ArlaPrimaryDarkBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="20,12"
                            Content="GÃ¥rde og Natur Check"/>
                    <Button x:Name="TasksButton"
                            Tag="Tasks"
                            Click="NavigationButton_Click"
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="160"
                            MinHeight="45"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Background="{StaticResource ArlaAccentBrush}"
                            Foreground="{StaticResource ArlaNeutralDarkBrush}"
                            BorderBrush="{StaticResource ArlaPrimaryDarkBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="20,12"
                            Content="Mine opgaver"/>
                </StackPanel>

                <ProgressBar Grid.Column="0"
                             Grid.RowSpan="2"
                             IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                             Height="4"
                             Width="200"
                             VerticalAlignment="Bottom"
                             Margin="0,0,0,5"/>
            </Grid>
        </Border>

        <!-- Search and Action Buttons -->
        <Border Grid.Row="1" 
                Background="{StaticResource ArlaSurfaceBrush}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Search Bar -->
                <Border Grid.Column="0" 
                        Background="{StaticResource ArlaSurfaceBrush}"
                        BorderBrush="{StaticResource ArlaPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="15,10"
                        MaxWidth="400">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ðŸ”" 
                                   FontSize="18"
                                   VerticalAlignment="Center"/>
                        <TextBox PlaceholderText="SÃ¸g gÃ¥rd" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 FontSize="16"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="15">
                    <Button Content="Opret Naturtjek" 
                            Style="{StaticResource ArlaPrimaryButton}"
                            MinWidth="180"/>
                    <Button Content="Eksporter rapport" 
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="180"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Data Table -->
        <Border Grid.Row="2" 
                Style="{StaticResource ArlaCard}"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Grid.Row="0" 
                        Background="{StaticResource ArlaPrimaryLightBrush}"
                        Padding="15,10"
                        CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="GÃ¥rdnavn" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="1" 
                                   Text="Region" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="2" 
                                   Text="Dato" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="3" 
                                   Text="Status" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="4" 
                                   Text="Point" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="5" 
                                   Text="Handling" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                    </Grid>
                </Border>

                <!-- Table Body -->
                <Border Grid.Row="1" 
                        Background="{StaticResource ArlaSurfaceBrush}"
                        BorderBrush="{StaticResource ArlaLightGreyBrush}"
                        BorderThickness="1,0,1,1"
                        CornerRadius="0,0,8,8"
                        MinHeight="400">
                    <TextBlock Text="Liste med alle naturtjeks" 
                               Style="{StaticResource ArlaBodyText}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource ArlaNeutralDarkBrush}"
                               Opacity="0.6"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>

