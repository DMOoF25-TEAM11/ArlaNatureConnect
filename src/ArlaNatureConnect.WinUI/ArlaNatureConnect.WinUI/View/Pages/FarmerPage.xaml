<Page
    x:Class="ArlaNatureConnect.WinUI.View.Pages.FarmerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArlaNatureConnect.WinUI.View.Pages"
    xmlns:farmer="using:ArlaNatureConnect.WinUI.View.Pages.Farmer"
    xmlns:domain="using:ArlaNatureConnect.Domain.Entities"
    xmlns:controls="using:ArlaNatureConnect.WinUI.View.Controls"
    Background="{StaticResource AppBackgroundBrush}"
    Loaded="FarmerPage_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <farmer:FarmerSidebar x:Name="Sidebar"
                              Grid.Column="0"
                              DataContext="{Binding}"/>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <!-- Main Content Area - ContentPresenter for switching views -->
            <ContentPresenter x:Name="ContentPresenter"
                          DataContext="{Binding}"/>
            <controls:MessageErrorSuccesUC />
        </StackPanel>
    </Grid>
</Page>

