<Page
    x:Class="ArlaNatureConnect.WinUI.View.Pages.FarmerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArlaNatureConnect.WinUI.View.Pages"
    xmlns:domain="using:ArlaNatureConnect.Domain.Entities"
    Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Header with Arla Nature Connect and Dropdown -->
        <Border Grid.Row="0" 
                Background="{StaticResource ArlaPrimaryBrush}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left: Arla Nature Connect and Dropdown -->
                <StackPanel Grid.Column="0" 
                            Orientation="Vertical" 
                            Spacing="10">
                    <TextBlock Text="Arla Nature Connect" 
                               Style="{StaticResource ArlaHeaderText}"
                               Foreground="{StaticResource ArlaNeutralLightBrush}"
                               FontSize="24"/>
                    
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10"
                                VerticalAlignment="Center">
                        <TextBlock Text="Landmand:" 
                                   Style="{StaticResource ArlaBodyText}"
                                   Foreground="{StaticResource ArlaNeutralLightBrush}"
                                   VerticalAlignment="Center"/>
                        <ComboBox x:Name="UserComboBox"
                                  ItemsSource="{Binding AvailablePersons}"
                                  SelectedItem="{Binding SelectedPerson, Mode=TwoWay}"
                                  Style="{StaticResource ArlaComboBox}"
                                  IsEnabled="{Binding IsLoading, Converter={StaticResource InvertBoolConverter}}"
                                  MinWidth="200"
                                  Background="{StaticResource ArlaSurfaceBrush}"
                                  PlaceholderText="VÃ¦lg bruger">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding FirstName}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding LastName}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!-- Right: Navigation Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Dashboards" 
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="150"/>
                    <Button Content="GÃ¥rde og Natur Check" 
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="200"/>
                    <Button Content="Mine opgaver" 
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="150"/>
                </StackPanel>

                <ProgressBar Grid.Column="0"
                             IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                             Height="4"
                             Width="200"
                             VerticalAlignment="Bottom"
                             Margin="0,0,0,5"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Search and Action Buttons -->
            <Border Grid.Row="0" 
                    Background="{StaticResource ArlaSurfaceBrush}"
                    Padding="20,15"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Search Bar -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource ArlaSurfaceBrush}"
                            BorderBrush="{StaticResource ArlaPrimaryBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="15,10"
                            MaxWidth="400">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ”" 
                                       FontSize="18"
                                       VerticalAlignment="Center"/>
                            <TextBox PlaceholderText="SÃ¸g gÃ¥rd" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalAlignment="Center"
                                     FontSize="16"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                Spacing="15">
                        <Button Content="Opret Naturtjek" 
                                Style="{StaticResource ArlaPrimaryButton}"
                                MinWidth="180"/>
                        <Button Content="Eksporter rapport" 
                                Style="{StaticResource ArlaSecondaryButton}"
                                MinWidth="180"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Dashboard Content -->
            <Border Grid.Row="1" 
                    Style="{StaticResource ArlaCard}"
                    Visibility="{Binding IsUserSelected, Converter={StaticResource BoolToVis}}">
                <StackPanel Spacing="20">
                    <TextBlock Text="Dashboard" 
                               Style="{StaticResource ArlaSubHeaderText}"/>
                    
                    <TextBlock Style="{StaticResource ArlaBodyText}">
                        <Run Text="Velkommen, "/>
                        <Run Text="{Binding SelectedPerson.FirstName}" FontWeight="Bold"/>
                        <Run Text=" "/>
                        <Run Text="{Binding SelectedPerson.LastName}" FontWeight="Bold"/>
                    </TextBlock>

                    <TextBlock Text="Her vil dit dashboard blive vist..." 
                               Style="{StaticResource ArlaBodyText}"
                               Foreground="{StaticResource ArlaNeutralDarkBrush}"
                               Opacity="0.7"/>
                </StackPanel>
            </Border>

            <!-- No User Selected Message -->
            <TextBlock Grid.Row="1" 
                       Text="VÃ¦lg en landmand fra dropdown-menuen for at se dashboardet." 
                       Style="{StaticResource ArlaBodyText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource ArlaNeutralDarkBrush}"
                       Opacity="0.7"
                       Visibility="{Binding IsUserSelected, Converter={StaticResource InvertBoolConverter}}"/>
        </Grid>
    </Grid>
</Page>

