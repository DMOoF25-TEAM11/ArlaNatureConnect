<Page
    x:Class="ArlaNatureConnect.WinUI.View.Pages.ArlaEmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArlaNatureConnect.WinUI.View.Pages"
    xmlns:arlaEmployee="using:ArlaNatureConnect.WinUI.View.Pages.ArlaEmployee"
    xmlns:domain="using:ArlaNatureConnect.Domain.Entities"
    Background="{StaticResource AppBackgroundBrush}"
    Loaded="ArlaEmployeePage_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <arlaEmployee:ArlaEmployeeSidebar x:Name="Sidebar"
                                            Grid.Column="0"
                                            DataContext="{Binding}"/>

        <!-- Main Content Area - ContentPresenter for switching views -->
        <ContentPresenter x:Name="ContentPresenter"
                          Grid.Column="1"
                          DataContext="{Binding}"/>
    </Grid>
</Page>

