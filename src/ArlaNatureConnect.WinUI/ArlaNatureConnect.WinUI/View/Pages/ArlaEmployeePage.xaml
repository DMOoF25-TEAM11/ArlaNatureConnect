<Page
    x:Class="ArlaNatureConnect.WinUI.View.Pages.ArlaEmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArlaNatureConnect.WinUI.View.Pages"
    Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Header with Arla Nature Connect (no dropdown) -->
        <Border Grid.Row="0" 
                Background="{StaticResource ArlaPrimaryBrush}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left: Arla Nature Connect -->
                <TextBlock Grid.Column="0"
                           Text="Arla Nature Connect" 
                           Style="{StaticResource ArlaHeaderText}"
                           Foreground="{StaticResource ArlaNeutralLightBrush}"
                           FontSize="24"/>

                <!-- Right: Navigation Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Dashboards" 
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="150"/>
                    <Button Content="Gårde" 
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="150"/>
                    <Button Content="Brugere" 
                            Style="{StaticResource ArlaSecondaryButton}"
                            MinWidth="150"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="1" 
                Background="{StaticResource ArlaSurfaceBrush}"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                        Spacing="15"
                        HorizontalAlignment="Center">
                <Button Content="Opret gård til tjek" 
                        Style="{StaticResource ArlaPrimaryButton}"
                        MinWidth="180"/>
                <Button Content="Rediger gård" 
                        Style="{StaticResource ArlaSecondaryButton}"
                        MinWidth="180"/>
                <Button Content="Slet gård" 
                        Style="{StaticResource ArlaSecondaryButton}"
                        MinWidth="180"/>
            </StackPanel>
        </Border>

        <!-- Data Table -->
        <Border Grid.Row="2" 
                Style="{StaticResource ArlaCard}"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Grid.Row="0" 
                        Background="{StaticResource ArlaPrimaryLightBrush}"
                        Padding="15,10"
                        CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Navn" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="1" 
                                   Text="CVR" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="2" 
                                   Text="Region" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="3" 
                                   Text="Status" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                        <TextBlock Grid.Column="4" 
                                   Text="Gård" 
                                   Style="{StaticResource ArlaSubHeaderText}"
                                   Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                    </Grid>
                </Border>

                <!-- Table Body -->
                <Border Grid.Row="1" 
                        Background="{StaticResource ArlaSurfaceBrush}"
                        BorderBrush="{StaticResource ArlaLightGreyBrush}"
                        BorderThickness="1,0,1,1"
                        CornerRadius="0,0,8,8"
                        MinHeight="400">
                    <TextBlock Text="Liste med gårde" 
                               Style="{StaticResource ArlaBodyText}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource ArlaNeutralDarkBrush}"
                               Opacity="0.6"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>

