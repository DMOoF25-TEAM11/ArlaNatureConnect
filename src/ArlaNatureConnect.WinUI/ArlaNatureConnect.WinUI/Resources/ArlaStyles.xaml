<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winui="using:Microsoft.UI.Xaml">

    <!--  PRIMARY COLOUR PALETTE  -->
    <!-- Define brushes directly to avoid unresolved Color type in WinUI XAML -->
    <SolidColorBrush x:Key="ArlaPrimaryBrush" Color="#FF00693C" /> <!-- Primary Green -->
    <SolidColorBrush x:Key="ArlaPrimaryLightBrush" Color="#FFC8E1C1" /> <!-- Light Green -->
    <SolidColorBrush x:Key="ArlaPrimaryDarkBrush" Color="#FF004225" /> <!-- Dark Green -->
    <SolidColorBrush x:Key="ArlaSidebarLightBrush" Color="#FFC8E1C1" /> <!-- Light Green for sidebar -->
    <SolidColorBrush x:Key="ArlaTableHeaderBrush" Color="#FF6EA870" /> <!-- Darker green for table header -->
    <SolidColorBrush x:Key="ArlaNavHoverBrush" Color="#FFCFE9C6" /> <!-- Lighter green for nav hover -->
    <SolidColorBrush x:Key="ArlaPrimaryHoverBrush" Color="#FF005B2E" /> <!--  Darker green for button hover -->
    <SolidColorBrush x:Key="ArlaAccentHoverBrush" Color="#FFE8C43F" /> <!-- Deeper yellow for button hover -->
    <SolidColorBrush x:Key="ArlaTableRowHoverBrush" Color="#FFC8E1C1" /> <!-- Light green for table row hover -->
    <SolidColorBrush x:Key="ArlaTableHeaderBorderBrush" Color="#FFE5E5E5" /> <!-- Gray border for table header -->

    <!--  SECONDARY COLOUR PALETTE -->
    <SolidColorBrush x:Key="ArlaAccentBrush" Color="#FFFFD94A" /> <!-- Yellow accent -->
    <SolidColorBrush x:Key="ArlaSecondaryBrush" Color="#FF007C89" /> <!-- Turquoise -->
    <SolidColorBrush x:Key="ArlaNeutralLightBrush" Color="#FFF4F4F2" /> <!-- Off White -->
    <SolidColorBrush x:Key="ArlaNeutralDarkBrush" Color="#FF555555" /> <!-- Updated neutral gray text -->
    <SolidColorBrush x:Key="ArlaSurfaceBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ArlaErrorBrush" Color="#FF9E463D" /> <!-- Clay Red -->
    <SolidColorBrush x:Key="ArlaLightGreyBrush" Color="#FFE0E0E0" /> <!-- Light Grey for borders -->

    <!--  GLOBAL THEME -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFF4F4F2" />
    <SolidColorBrush x:Key="AppForegroundBrush" Color="#FF555555" />
    <SolidColorBrush x:Key="AppPrimaryBrush" Color="#FF00693C" />
    <SolidColorBrush x:Key="AppAccentBrush" Color="#FFFFD94A" />

    <!--  PRIMARY BUTTON STYLE -->
    <Style TargetType="Button" x:Key="ArlaPrimaryButton">
        <Setter Property="Background" Value="{StaticResource ArlaPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ArlaNeutralLightBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="24,12" />
        <Setter Property="BorderBrush" Value="{StaticResource ArlaPrimaryDarkBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="MinHeight" Value="50" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <!-- UI polish: Hover state  -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaPrimaryHoverBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonText" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaNeutralLightBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <!-- UI polish: Pressed state (Darker bye 5%) -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaPrimaryDarkBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonText" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaNeutralLightBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" To="0.95" Duration="0"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaNeutralLightBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonText" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaNeutralDarkBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" To="0.6" Duration="0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <TextBlock x:Name="ButtonText"
                            Text="{TemplateBinding Content}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{TemplateBinding Foreground}"
                            FontWeight="{TemplateBinding FontWeight}"
                            FontSize="{TemplateBinding FontSize}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  SECONDARY BUTTON -->
    <Style TargetType="Button" x:Key="ArlaSecondaryButton" BasedOn="{StaticResource ArlaPrimaryButton}">
        <Setter Property="Background" Value="{StaticResource ArlaAccentBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ArlaNeutralDarkBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ArlaPrimaryDarkBrush}" />
    </Style>

    <!--  TEXTBLOCK STYLES -->
    <Style TargetType="TextBlock" x:Key="ArlaHeaderText">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource ArlaPrimaryDarkBrush}" />
    </Style>

    <Style TargetType="TextBlock" x:Key="ArlaBodyText">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{StaticResource ArlaNeutralDarkBrush}" />
    </Style>

    <Style TargetType="TextBlock" x:Key="ArlaSubHeaderText">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource ArlaPrimaryDarkBrush}" />
    </Style>

    <!--  CARD STYLE -->
    <Style TargetType="Border" x:Key="ArlaCard">
        <Setter Property="Background" Value="{StaticResource ArlaSurfaceBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource ArlaLightGreyBrush}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>

    <!--  COMBOBOX STYLE - Reusable style for user selection dropdown -->
    <Style TargetType="ComboBox" x:Key="ArlaComboBox">
        <Setter Property="Background" Value="{StaticResource ArlaSurfaceBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ArlaNeutralDarkBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ArlaPrimaryBrush}" />
        <Setter Property="Padding" Value="14,12" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="MinHeight" Value="44" />
    </Style>

    <!--  TEXTBOX STYLE -->
    <Style TargetType="TextBox" x:Key="ArlaTextBox">
        <Setter Property="Background" Value="{StaticResource ArlaSurfaceBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ArlaNeutralDarkBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ArlaPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!--  NAVIGATIONVIEW STYLE -->
    <Style TargetType="NavigationView" x:Key="ArlaNavigationView">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style TargetType="NavigationViewItem" x:Key="ArlaNavigationViewItem">
        <Setter Property="Foreground" Value="{StaticResource ArlaNeutralLightBrush}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="Margin" Value="5,0" />
    </Style>

    <!-- NAVIGATION BUTTON STYLE -->
    <Style TargetType="Button" x:Key="ArlaNavButton">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="20,18"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource ArlaPrimaryDarkBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <!-- UI polish: Hover-effekt  -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaNavHoverBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaPrimaryDarkBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" To="0.5" Duration="0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ACTIVE NAVIGATION BUTTON STYLE -->
    <Style TargetType="Button" x:Key="ArlaNavButtonActive" BasedOn="{StaticResource ArlaNavButton}">
        <Setter Property="Background" Value="{StaticResource ArlaPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ArlaNeutralLightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                            Background="{StaticResource ArlaPrimaryBrush}"
                            BorderBrush="{StaticResource ArlaPrimaryDarkBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Margin="0,0,0,0">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaPrimaryDarkBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  EXPORT BUTTON STYLE (Secondary - Light Gray/Yellow) -->
    <Style TargetType="Button" x:Key="ArlaExportButton" BasedOn="{StaticResource ArlaPrimaryButton}">
        <Setter Property="Background" Value="{StaticResource ArlaAccentBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ArlaNeutralDarkBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ArlaPrimaryDarkBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <!-- UI polish: Hover state - dybere gul #E8C43F -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArlaAccentHoverBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <!-- UI polish: Pressed state - 5% mørkere -->
                                        <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" To="0.95" Duration="0"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" To="0.6" Duration="0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <TextBlock x:Name="ButtonText"
                            Text="{TemplateBinding Content}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{TemplateBinding Foreground}"
                            FontWeight="{TemplateBinding FontWeight}"
                            FontSize="{TemplateBinding FontSize}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

