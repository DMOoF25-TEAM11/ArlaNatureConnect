<UserControl
    x:Class="ArlaNatureConnect.WinUI.Views.Controls.PageContents.Consultant.ConsultantCreateNatureCheck"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="using:ArlaNatureConnect.Domain.Entities"
    mc:Ignorable="d"
    Background="{StaticResource AppBackgroundBrush}">

  <Grid Padding="32">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <!-- Title -->
      <RowDefinition Height="Auto" />
      <!-- Form -->
      <RowDefinition Height="Auto" />
      <!-- Button + count -->
      <RowDefinition Height="*" />
      <!-- Table -->
    </Grid.RowDefinitions>

    <!-- Title -->
    <TextBlock Grid.Row="0"
                   Text="Naturtjek detaljer"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,24" />

    <!-- Form -->
    <Grid Grid.Row="1"
              Margin="0,0,0,24">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <!-- Gård -->
        <RowDefinition Height="Auto" />
        <!-- CVR -->
        <RowDefinition Height="Auto" />
        <!-- Adresse -->
        <RowDefinition Height="Auto" />
        <!-- Konsulent -->
        <RowDefinition Height="Auto" />
        <!-- Dato -->
        <RowDefinition Height="Auto" />
        <!-- Tid -->
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="16" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <!-- Gård -->
      <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Gårdnavn:"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
      <ComboBox Grid.Row="0"
                      Grid.Column="2"
                      ItemsSource="{Binding Farms}"
                      SelectedItem="{Binding SelectedFarm, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      PlaceholderText="Vælg gård" />

      <!-- CVR -->
      <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Margin="0,8,0,0"
                       Text="CVR:"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
      <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Margin="0,8,0,0"
                       Text="{Binding FarmCVRDisplay}" />

      <!-- Adresse -->
      <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Margin="0,8,0,0"
                       Text="Adresse:"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
      <TextBlock Grid.Row="2"
                       Grid.Column="2"
                       Margin="0,8,0,0"
                       Text="{Binding FarmAddressDisplay}" />

      <!-- Konsulent -->
      <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Margin="0,8,0,0"
                       Text="Konsulent:"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
      <ComboBox Grid.Row="3"
                      Grid.Column="2"
                      Margin="0,8,0,0"
                      ItemsSource="{Binding Persons}"
                      SelectedItem="{Binding SelectedConsultant, Mode=TwoWay}"
                      PlaceholderText="Vælg konsulent">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <TextBlock>
                            <Run Text="{Binding FirstName}" />
                            <Run Text=" " />
                            <Run Text="{Binding LastName}" />
            </TextBlock>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>

      <!-- Dato -->
      <TextBlock Grid.Row="4"
                       Grid.Column="0"
                       Margin="0,8,0,0"
                       Text="Dato:"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
      <DatePicker Grid.Row="4"
                        Grid.Column="2"
                        Margin="0,8,0,0"
                        Date="{Binding SelectedDate, Mode=TwoWay}" />

      <!-- Tid -->
      <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       Margin="0,8,0,0"
                       Text="Tid:"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
      <TimePicker Grid.Row="5"
                        Grid.Column="2"
                        Margin="0,8,0,0"
                        Time="{Binding SelectedTime, Mode=TwoWay}" />
    </Grid>

    <!-- Button + Count -->
    <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0,0,0,8">
      <Button Content="Opret naturtjek"
                    Command="{Binding CreateNatureCheckCommand}"
                    HorizontalAlignment="Left" />

      <TextBlock Margin="24,0,0,0"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Text="Count: ">
                <Run Text="{Binding NatureChecks.Count}" />
      </TextBlock>
    </StackPanel>

    <!-- Table of created nature checks -->
    <Border Grid.Row="3"
                Margin="0,24,0,0"
                Background="{StaticResource ArlaSurfaceBrush}"
                BorderBrush="{StaticResource ArlaLightGreyBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="16">

      <ListView ItemsSource="{Binding NatureChecks}">
        <!-- Header -->
        <ListView.Header>
          <Grid Padding="0,0,0,8">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                                   Text="Gård"
                                   FontWeight="Bold" />
            <TextBlock Grid.Column="1"
                                   Text="Konsulent"
                                   FontWeight="Bold" />
            <TextBlock Grid.Column="2"
                                   Text="Dato"
                                   FontWeight="Bold" />
            <TextBlock Grid.Column="3"
                                   Text="Adresse"
                                   FontWeight="Bold" />
            <TextBlock Grid.Column="4"
                                   Text="CVR"
                                   FontWeight="Bold" />
          </Grid>
        </ListView.Header>

        <!-- Rows -->
        <ListView.ItemTemplate>
          <!-- we’re using NatureCheckCase -->
          <DataTemplate x:DataType="domain:NatureCheckCase">
            <Grid Padding="0,4">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <!-- Farm name (via navigation property) -->
              <TextBlock Grid.Column="0"
                                       Text="{x:Bind Farm.Name, Mode=OneWay}" />

              <!-- Consultant name -->
              <TextBlock Grid.Column="1">
                                <Run Text="{x:Bind Consultant.FirstName, Mode=OneWay}" />
                                <Run Text=" " />
                                <Run Text="{x:Bind Consultant.LastName, Mode=OneWay}" />
              </TextBlock>

              <!-- Date (CreatedAt mapped to [Date] in DB) -->
              <TextBlock Grid.Column="2"
                                       Text="{x:Bind CreatedAt, Mode=OneWay}" />

              <!-- Address (Street, PostalCode City) -->
              <TextBlock Grid.Column="3">
                                <Run Text="{Binding Farm.Address.Street, TargetNullValue=''}" />
                                <Run Text=", " />
                                <Run Text="{Binding Farm.Address.PostalCode, TargetNullValue=''}" />
                                <Run Text=" " />
                                <Run Text="{Binding Farm.Address.City, TargetNullValue=''}" />
              </TextBlock>

              <!-- CVR (from farm) -->
              <TextBlock Grid.Column="4"
                                       Text="{x:Bind Farm.CVR, Mode=OneWay}" />
            </Grid>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </Border>
  </Grid>
</UserControl>
