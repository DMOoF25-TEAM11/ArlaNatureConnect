<UserControl
    x:Class="ArlaNatureConnect.WinUI.Views.Controls.PageContents.Consultant.ConsultantNatureCheck"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArlaNatureConnect.WinUI.Views.Controls.PageContents.Consultant"
    Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Bar with Search and Actions -->
        <Border Grid.Row="0" 
                Background="{StaticResource ArlaSurfaceBrush}"
                Padding="32,24"
                BorderBrush="{StaticResource ArlaLightGreyBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Search Bar -->
                <Border Grid.Column="0" 
                        x:Name="SearchBorder"
                        Background="{StaticResource ArlaNeutralLightBrush}"
                        BorderBrush="{StaticResource ArlaPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="20,16"
                        MaxWidth="500"
                        MinHeight="48"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <TextBlock Text="🔍" 
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource ArlaNeutralDarkBrush}"
                                   Opacity="0.6"
                                   Margin="0,0,4,0"/>
                        <TextBox PlaceholderText="Søg gård..." 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 FontSize="15"
                                 VerticalContentAlignment="Center"
                                 Margin="4,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="16"
                            VerticalAlignment="Center">
          <Button Content="Opret Naturtjek" 
                            Style="{StaticResource ArlaPrimaryButton}"
                            MinWidth="180"
                            MinHeight="48"
                            Padding="24,14"
                            Command="{Binding OpenCreateNatureCheckCommand}"/>
          <Button Content="Eksporter rapport" 
                            Style="{StaticResource ArlaExportButton}"
                            MinWidth="180"
                            MinHeight="48"
                            Padding="24,14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Section -->
        <ScrollViewer Grid.Row="1" 
                      Grid.RowSpan="2"
                      Padding="32"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24" Margin="0,0,0,24">
                <!-- Page Title with Notifications -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Gårde og Natur Check" 
                               Style="{StaticResource ArlaHeaderText}"
                               FontSize="36"
                               FontWeight="Bold"
                               Margin="0,-8,0,4"
                               Foreground="{StaticResource ArlaPrimaryDarkBrush}"/>
                    
                    <!-- Notification Icon -->
                    <Button Grid.Column="1"
                            x:Name="NotificationButton"
                            Background="Transparent"
                            BorderBrush="{StaticResource ArlaPrimaryMutedBrush}"
                            BorderThickness="1"
                            Padding="12"
                            MinWidth="48"
                            MinHeight="48"
                            CornerRadius="8"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Click="NotificationButton_Click">
                        <Grid>
                            <TextBlock Text="🔔" 
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <Border x:Name="NotificationBadge"
                                    Background="{StaticResource ArlaAccentBrush}"
                                    CornerRadius="10"
                                    Padding="4,2"
                                    MinWidth="18"
                                    Height="18"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,-4,-4,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="NotificationCount"
                                           Text="0"
                                           Foreground="White"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Button>
                </Grid>

                <!-- Data Table Card -->
                <Border Style="{StaticResource ArlaCard}"
                        Padding="0"
                        Margin="0"
                        x:Name="TableCard">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Table Header -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource ArlaTableHeaderBrush}"
                                Padding="24,18"
                                CornerRadius="12,12,0,0"
                                BorderBrush="{StaticResource ArlaTableHeaderBorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Gårdnavn" 
                                           Style="{StaticResource ArlaSubHeaderText}"
                                           Foreground="{StaticResource ArlaPrimaryDarkBrush}"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" 
                                           Text="Region" 
                                           Style="{StaticResource ArlaSubHeaderText}"
                                           Foreground="{StaticResource ArlaPrimaryDarkBrush}"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Column="2" 
                                           Text="Dato" 
                                           Style="{StaticResource ArlaSubHeaderText}"
                                           Foreground="{StaticResource ArlaPrimaryDarkBrush}"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Column="3" 
                                           Text="Status" 
                                           Style="{StaticResource ArlaSubHeaderText}"
                                           Foreground="{StaticResource ArlaPrimaryDarkBrush}"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Column="4" 
                                           Text="Point" 
                                           Style="{StaticResource ArlaSubHeaderText}"
                                           Foreground="{StaticResource ArlaPrimaryDarkBrush}"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                                <TextBlock Grid.Column="5" 
                                           Text="Handling" 
                                           Style="{StaticResource ArlaSubHeaderText}"
                                           Foreground="{StaticResource ArlaPrimaryDarkBrush}"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                            </Grid>
                        </Border>

                        <!-- Table Body -->
                        <Border Grid.Row="1" 
                                Background="{StaticResource ArlaSurfaceBrush}"
                                BorderBrush="{StaticResource ArlaLightGreyBrush}"
                                BorderThickness="1,0,1,1"
                                CornerRadius="0,0,12,12"
                                MinHeight="500"
                                Padding="24">
                            <StackPanel HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Spacing="16">
                                <TextBlock Text="🌿" 
                                           FontSize="64"
                                           HorizontalAlignment="Center"
                                           Opacity="0.6"/>
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <TextBlock Text="Der er endnu ingen naturtjek registreret." 
                                               Style="{StaticResource ArlaBodyText}"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource ArlaNeutralDarkBrush}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Opacity="0.7"/>

                                              <TextBlock Text="Klik på Opret Naturtjek for at starte." 
                                               Style="{StaticResource ArlaBodyText}"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource ArlaNeutralDarkBrush}"
                                               FontSize="16"
                                               Opacity="0.6"/>
                                   </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

