<?xml version="1.0" encoding="utf-8"?>
<UserControl
  x:Class="ArlaNatureConnect.WinUI.Views.Controls.SharedUC.CRUDNatureAreaUC"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:ArlaNatureConnect.WinUI.Views.Controls.SharedUC"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:shareduc="using:ArlaNatureConnect.WinUI.ViewModels.Controls.SharedUC"
  xmlns:vm="using:ArlaNatureConnect.WinUI.ViewModels.Controls.SharedUC"
  d:DataContext="{d:DesignInstance Type=vm:CRUDNatureAreaUCViewModel}"
  mc:Ignorable="d">

  <Grid Padding="24" Background="{StaticResource AppBackgroundBrush}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="400"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Border Grid.Column="0"
            Style="{StaticResource ArlaCard}"
            Background="{StaticResource ArlaSurfaceBrush}"
            Margin="8,0,12,8"
            VerticalAlignment="Top">
      <StackPanel Orientation="Vertical" Spacing="16">
        <TextBlock Text="{Binding LabelNatureAreaDetails, Mode=OneTime}"
                     Style="{StaticResource ArlaSubHeaderText}"
                     Margin="0,0,0,8"/>

        <StackPanel Orientation="Vertical" Spacing="12">
          <StackPanel Orientation="Vertical" Spacing="4">
            <TextBlock Text="{Binding LabelNatureAreaName, Mode=OneTime}" 
                         Style="{StaticResource ArlaBodyText}"
                         FontWeight="SemiBold"/>
            <TextBox Text="{Binding NatureAreaName, Mode=TwoWay}" 
                       Style="{StaticResource ArlaTextBox}"/>

            <TextBlock Text="{Binding LabelNatureAreaDescription, Mode=OneTime}" 
                       Style="{StaticResource ArlaBodyText}"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding NatureAreaDescription, Mode=TwoWay}" 
                       Style="{StaticResource ArlaTextBox}"
                       AcceptsReturn="True"
                       Height="100"
                       TextWrapping="Wrap"/>

            <!-- Editable list of Coordinates -->
            <TextBlock Text="Coordinates" 
                       Style="{StaticResource ArlaBodyText}" 
                       FontWeight="SemiBold" 
                       Margin="0,8,0,0"/>
            <ListView ItemsSource="{Binding Coordinates, Mode=TwoWay}" 
                      Margin="0,0,0,8"
                      Height="120"
                      SelectionMode="Single">
              <ListView.ItemTemplate>
                <DataTemplate>
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox Text="{Binding Latitude, Mode=TwoWay}" Width="80" PlaceholderText="Lat"/>
                    <TextBox Text="{Binding Longitude, Mode=TwoWay}" Width="80" PlaceholderText="Lng"/>
                    <!-- Add more fields if needed -->
                  </StackPanel>
                </DataTemplate>
              </ListView.ItemTemplate>
            </ListView>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding NatureAreaSizeKm2, Mode=OneWay}"/>
              <TextBlock Text=" km2"/>
            </StackPanel>
            <!-- Optionally, add buttons for add/remove -->
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button Content="Add Coordinate" IsEnabled="False" Command="{Binding AddCoordinateCommand}" />
              <Button Content="Remove Selected" IsEnabled="False" Command="{Binding RemoveCoordinateCommand}" />
            </StackPanel>
            <TextBlock Text="CRUD is for now done directly in database"/>
          </StackPanel>
        </StackPanel>
      </StackPanel>
    </Border>
    <StackPanel Grid.Column="1" 
                Orientation="Vertical" 
                Spacing="12" 
                VerticalAlignment="Top">
      <Border Style="{StaticResource ArlaCard}"
                Background="{StaticResource ArlaSurfaceBrush}"
                Margin="8,0,8,8"
                VerticalAlignment="Top">
        <StackPanel>
          <ComboBox x:Name="FarmComboBox"
          ItemsSource="{Binding FarmsWhoHaveNatureArea, Mode=OneWay}" 
          SelectedItem="{Binding SelectedFarm, Mode=TwoWay}"
          DisplayMemberPath="Name"
          PlaceholderText="{Binding LabelSelectAFarm}"
          Margin="0,0,0,12"/>

          <ListView x:Name="NatureAreaListView"
          ItemsSource="{Binding Items, Mode=OneWay}"
          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
          DisplayMemberPath="Name"
          Height="200"/>
        </StackPanel>
      </Border>
    </StackPanel>

  </Grid>
</UserControl>
