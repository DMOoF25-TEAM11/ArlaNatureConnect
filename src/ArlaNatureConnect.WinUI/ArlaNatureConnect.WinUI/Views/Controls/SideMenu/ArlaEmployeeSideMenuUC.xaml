<UserControl
    x:Class="ArlaNatureConnect.WinUI.Views.Controls.SideMenu.ArlaEmployeeSideMenuUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArlaNatureConnect.WinUI.Views.Controls.SideMenu"
    Background="{StaticResource ArlaSidebarLightBrush}">

    <Border Background="{StaticResource ArlaSidebarLightBrush}"
            BorderBrush="{StaticResource ArlaPrimaryDarkBrush}"
            BorderThickness="0,0,2,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Logo/Title Section -->
            <Border Grid.Row="0" 
                    Padding="24,28,24,24"
                    BorderBrush="{StaticResource ArlaPrimaryDarkBrush}"
                    BorderThickness="0,0,0,2">
                <StackPanel Spacing="20">
                    <TextBlock Text="Arla Nature Connect" 
                               Foreground="{StaticResource ArlaPrimaryDarkBrush}"
                               FontSize="22"
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Navigation Menu -->
            <StackPanel Grid.Row="1" 
                        Spacing="12"
                        Padding="20,24">
                <Button x:Name="DashboardsButton"
                        Command="{Binding NavigationCommand}"
                        CommandParameter="Dashboards"
                        Content="Dashboards"
                        Style="{StaticResource ArlaNavButton}"/>

                <Button x:Name="FarmsButton"
                        Command="{Binding NavigationCommand}"
                        CommandParameter="Farms"
                        Content="GÃ¥rde"
                        Style="{StaticResource ArlaNavButton}"/>

                <Button x:Name="UsersButton"
                        Command="{Binding NavigationCommand}"
                        CommandParameter="Users"
                        Content="Brugere"
                        Style="{StaticResource ArlaNavButton}"/>
            </StackPanel>

            <!-- Bottom Section -->
            <Border Grid.Row="3" 
                    Padding="24">
                <!-- Can add logout button or other actions here -->
            </Border>
        </Grid>
    </Border>
</UserControl>

