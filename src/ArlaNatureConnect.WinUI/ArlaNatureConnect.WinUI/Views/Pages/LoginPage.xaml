<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ArlaNatureConnect.WinUI.Views.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArlaNatureConnect.WinUI.Views.Pages"
    xmlns:viewmodels="using:ArlaNatureConnect.WinUI.ViewModels.Pages" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    d:DataContext="{d:DesignInstance Type=viewmodels:LoginPageViewModel}"
    mc:Ignorable="d">

  <Page.DataContext>
    <viewmodels:LoginPageViewModel />
  </Page.DataContext>

  <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Logo Section -->
        <Grid Grid.Row="0" Margin="0,40,0,0">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Spacing="0">
                <!-- Arla Logo -->
                <Image Source="/Assets/arla-logo.svg" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       MaxHeight="240"
                       Stretch="Uniform"/>
                <!-- Nature Connect - Using TextBlock instead of SVG since WinUI 3 doesn't support SVG text -->
                <TextBlock Text="Nature Connect"
                           HorizontalAlignment="Center"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="#006C34"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Center"
                    Margin="40,20,40,40">
            
            <TextBlock Text="Vælg din rolle for at fortsætte" 
                       Style="{StaticResource ArlaBodyText}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       FontSize="18"/>

            <!-- Role Selection Buttons -->
            <StackPanel Spacing="20" HorizontalAlignment="Center">
                <Button Content="Landmand" 
                        Command="{Binding SelectRoleCommand}"
                        CommandParameter="Farmer"
                        Style="{StaticResource ArlaPrimaryButton}"/>

                <Button Content="Konsulent" 
                        Command="{Binding SelectRoleCommand}"
                        CommandParameter="Consultant"
                        Style="{StaticResource ArlaPrimaryButton}"/>

                <Button Content="Arla Medarbejder" 
                        Command="{Binding SelectRoleCommand}"
                        CommandParameter="ArlaEmployee"
                        Style="{StaticResource ArlaPrimaryButton}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

