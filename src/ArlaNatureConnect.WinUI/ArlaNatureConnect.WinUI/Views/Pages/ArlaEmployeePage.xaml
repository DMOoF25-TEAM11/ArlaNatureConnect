  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:abstracts="using:ArlaNatureConnect.WinUI.Views.Pages.Abstracts"
  xmlns:local="using:ArlaNatureConnect.WinUI.Views.Pages"
  xmlns:arlaEmployee="using:ArlaNatureConnect.WinUI.Views.Controls.SideMenu"
  xmlns:domain="using:ArlaNatureConnect.Domain.Entities" 
