<Page
  x:Class="ArlaNatureConnect.WinUI.View.Pages.ArlaEmployeePage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:ArlaNatureConnect.WinUI.View.Pages"
  xmlns:arlaEmployee="using:ArlaNatureConnect.WinUI.Views.Controls.SideMenu"
  xmlns:domain="using:ArlaNatureConnect.Domain.Entities" 
  xmlns:viewmodel="using:ArlaNatureConnect.WinUI.ViewModels.Pages" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  Loaded="ArlaEmployeePage_Loaded">

  <Page.DataContext>
    <viewmodel:ArlaEmployeePageViewModel />
  </Page.DataContext>
  
  <StackPanel Orientation="Vertical">
    <ContentPresenter x:Name="ContentPresenter"
                      DataContext="{Binding CurrentContent}"/>
  </StackPanel>
</Page>

